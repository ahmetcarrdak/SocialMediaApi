{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=socialmedia;Username=serverusername;Password=serverpassword"
  },
  "Jwt": {
    "Key": "BuBirGizliAnahtarOlmalıdır",  // Güçlü ve gizli bir anahtar belirleyin
    "Issuer": "exampleIssuer",            // JWT token'ınızın issuer (yayıncı) değeri
    "Audience": "exampleAudience"         // JWT token'ınızın audience (hedef kitle) değeri
  }
}
